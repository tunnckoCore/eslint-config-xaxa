---
import Hello from './hello.astro';

const isJsx = true;
const content = 'hi!';
---

<!-- <button name="John" type="button" class=" py-2 rounded     bg-blue-500   text-base text-white px-4" >click me</button> -->
<button class="text-base text-white px-4 py-2 rounded bg-blue-500" name="John" type="button">click me</button>
<article>
  <div>{content}</div>
  <div>
    {isJsx && <h1>{content}</h1>}
  </div>

  <Hello
    active={true}
    class="text-xl bg-red/50"
    name="John"
    onClick={() => {
      /* Handle click */
    }}
    onSubmit={() => {
      /* Handle submit */
    }}
    tel={5555555}
    validate={true}
  />
</article>

<script>
  const { log: logger } = console;

  // Client-side event handlers
  document.querySelector('button[type="button"]')?.addEventListener('click', (e) => {
    e.preventDefault();
    logger('Button clicked');
  });

  document.querySelector('button[type="submit"]')?.addEventListener('click', (e) => {
    e.preventDefault();
  });
</script>
